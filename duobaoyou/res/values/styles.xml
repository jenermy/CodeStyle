<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.




    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Start" parent="android:Theme">
        <item name="android:windowBackground">@drawable/app</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="StyleGrayEditText">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/px44</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#343434</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="StyleBgYellow">
        <item name="android:background">#faf1e7</item>
        <item name="android:textSize">@dimen/px63</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#f2a855</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="StyleBgBlue">
       	<item name="android:background">@drawable/shape_blue_btn</item>
        <item name="android:textSize">@dimen/px50</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cbPwd" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_pwd</item>
    </style>
	<style name="cbPwdBule" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_pwd_blue</item>
    </style>
    
    <style name="cbPay" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/cb_pay</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/translate_out</item>
        <item name="android:windowExitAnimation">@anim/translate_in</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="weekName">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!-- dialog -->
    <style name="mydialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item name="android:windowBackground">@drawable/shape_white_bg</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style>
    <style name="open_deposit_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- progressDialog -->
     <style name="progressdialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item name="android:windowBackground">@drawable/shape_black_bg</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="StyledIndicators" parent="@android:style/Theme.Light">  
    	<item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>  
	</style>  
  
<style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">  
    <item name="android:background">@drawable/tab_indicator</item>
    <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>  
    <item name="android:textSize">14sp</item>  
    <item name="android:dividerPadding">8dp</item>  
    <item name="android:showDividers">middle</item>  
    <item name="android:paddingLeft">10dp</item>  
    <item name="android:paddingRight">10dp</item>  
    <item name="android:fadingEdge">horizontal</item>  
    <item name="android:fadingEdgeLength">8dp</item>  
</style>  
  
<style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">  
    <item name="android:typeface">monospace</item>  
    <item name="android:textColor">@drawable/selector_tabtext</item>  
</style>
    <style name="transparent_activity">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>